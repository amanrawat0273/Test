<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ErrorScreen">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginRight="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"



        />

    <ImageView
        android:id="@+id/tick"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:src="@drawable/crosss"

        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/succestext"
        android:layout_width="272dp"
        android:layout_height="87dp"


        android:layout_marginTop="24dp"
        android:paddingBottom="5dp"
        android:text="Something \n went wrong "
        android:textAlignment="center"
        android:textColor="#E32227"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.496"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tick" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/tryagain"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6C838F"
        android:text="Try Again"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="10dp"

        app:layout_constraintBottom_toTopOf="@id/uploadmore"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/succestext"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/uploadmore"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6C838F"
        android:text="Upload More"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tryagain"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>